rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // Helper function to validate image file type
    function isValidImage() {
      return request.resource.contentType.matches('image/.*') &&
             request.resource.size < 5 * 1024 * 1024; // 5MB max
    }
    
    // User avatars and profile images
    match /users/{userId}/avatar/{fileName} {
      allow read: if true; // Public read for avatars
      allow write: if isSignedIn() && isOwner(userId) && isValidImage();
      allow delete: if isSignedIn() && isOwner(userId);
    }
    
    // Post images
    match /posts/{postId}/{fileName} {
      allow read: if true; // Public read for post images
      allow create: if isSignedIn() && isValidImage();
      allow delete: if isSignedIn() && (
        request.auth.uid == resource.metadata.author_uid ||
        firestore.get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );
    }
    
    // Topic/post media attachments
    match /media/{userId}/{fileName} {
      allow read: if true;
      allow write: if isSignedIn() && isOwner(userId) && isValidImage();
      allow delete: if isSignedIn() && isOwner(userId);
    }
  }
}
